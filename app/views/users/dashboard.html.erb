<div class="container-fluid">
  <!-- USER CARD STARTS -->
  <div class="row dashboard-user-card-wrapper col-md-8">
    <div class="dashboard-user-img-card col-xs-12 col-sm-6">
      <%= image_tag current_user.photo, class: "dashboard-user-img img-circle center-block" %>
    </div>
    <div class="dashboard-user-info-card col-xs-12 col-sm-4">
      <h4 class="dashboard-user-text">Name: <%= current_user.name %></h4><br>
      <h4 class="dashboard-user-text">City: <%= current_user.city %></h4><br>
      <h4 class="dashboard-user-text">State: <%= current_user.state %></h4><br>
      <div class="row">
        <%= link_to "Scheduler", scheduler_path, class: "btn btn-lg btn-default btn-home dashboard-scheduler-btn" %>
      </div>
    </div>
  </div>
  <!-- USER CARD ENDS -->
  <!-- THIS WEEK STARTS -->
  <div class="row dashboard-week-card-wrapper col-md-8">
    <h4 class="dashboard-user-text">THIS WEEK'S EVENTS</h4>
    <% @presenter.current_events.each do |event| %>
      <div class="row dashboard-event-wrapper">
        <h4>
          <%= event.name %>
          <%= event.group %>
          <%= @presenter.display_local_time(event) %>
        </h4>
        <h5>
          <%= event.description[0..250] %>
          <%= "..." if event[:description].length > 250 %>
        </h5>
      </div>
    <% end %>
  </div>
  <!-- THIS WEEK ENDS -->
  <!-- HISTORY STARTS -->
  <div class="row dashboard-history-card-wrapper col-md-8">
    <h4 class="dashboard-user-text">HISTORY OF SELECTED EVENTS</h4>
    <% @presenter.historical_events.each do |event| %>
        <div class="row dashboard-event-wrapper">
          <h4>
            <%= event.name %>
            <%= event.group %>
            <%= @presenter.display_local_time(event) %>
          </h4>
          <h5>
            <%= event.description[0..250] %>
            <%= "..." if event[:description].length > 250 %>
          </h5>
        </div>
      <% end %>
  </div>
  <!-- HISTORY ENDS -->
</div>
